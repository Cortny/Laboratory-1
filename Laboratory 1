#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>


int main() {
    int x = 0, n, p, y, i, q; // объявление переменных с их последующей инициализацией
    printf("Enter x: ");
    scanf("%d", &x);
    n = 11; // число, стоящее перед х
    p = 10; // из моей задумки это степень
    y = 0;  // просто инициализация
    q = x;  // новая переменная, которая нужна для возведения х в степень
    while (p != 0) // основной цикл уравнения
    {
        for (i = 0; i != p - 1; i++) // собственно постоянное возведение х в степень, где i используется в качестве счетчика
        {
            q = x * q; // собственно степень

        }
        y = n * q + y; // как я и говорил, n - коэф перед х, q - х, возведенный в степень, y - последующие действия (само уравнение можно разбить на сумму "игреков")
        n = n - 1;     // число перед х постоянно уменьшается на 1
        p = p - 1;     // степень постоянно уменьшается на 1
        q = x;         // присваиваение значения q иксу

    }
    y = y + 1;
    printf("Answer: y=%d", y); // вывод ответа на экран
    return 0;
}
